$red = #C25400
$darkRed = #803500
$indigo = #595959
$blue = #3675B7

$maxWidth = 1020px;

$headingColor = #1d2226
$bodyColor = #41484d

.container-fluid {
  margin-right: auto;
  margin-left: auto;
  max-width: 1054px;
}


div.container-fluid#content,
ul#main-content
  padding-left 15
  max-width 1050px

span.by-line
  font-size 12px
  color #7f7f7f

div.take-text
  font-weight 600
  margin-bottom 25px

img.take-pic
  //box-shadow -1.5px 0px 1px rgba(90, 90, 90, 0.35)


#eduviz > div > div:nth-child(1)
  font-family: 'Open Sans', sans-serif;
  font-size 16px
  line-height 1.5
  color $bodyColor

#eduviz > div.container-fluid
  font-family: 'Open Sans', sans-serif;
  font-size 16px
  line-height 27px
  color $bodyColor

  a
    color $red


span.idTag
  visibility none

/*** FOR LISTS ***/
#glossary
  display:none; /* assume smaller screen first */

  position: fixed;
  top: 3.85rem;
  left: 0;
  margin-left: auto
  margin-right: auto
  padding-left 5px
  opacity: 0.95;

  color $red

  li
    font-size 13px
    text-align beginning
    margin-top 2px

    a
      border-left 1px solid transparent
      padding-left 8px
      padding-right 8px



/* if screen size gets wider than specified width  */
@media screen and (min-width:1310px){
  #glossary {
    display:block;
  }
}

ul
  list-style: none

ul.diamonds
  padding-left 0
  list-style-position outside
  list-style: none

.diamonds li
  margin-top 15px
  margin-left 25px
  position relative
  padding-bottom 15px
  border-bottom 1px solid rgba(90, 90, 90, 0.25)

.diamonds li::before {
  content: " ";
  color: rgba(62,62,71,0.8);
  line-height: 1.5;
  background-color: rgba(62,62,71,0.8);
  width: 7px;
  height: 7px;
  position: absolute;
  left: -20px;
  top: 10px;
  transform: rotate(45deg);
  transform-origin: 50% 50%;
}


h1
  text-align: left
  color $headingColor
  font-size 32px
  font-family: 'Montserrat', sans-serif;
  letter-spacing: 3px

  padding-left: 5px;
  padding-top: 10px;
  padding-bottom: 10px;
  border-top: 2px solid $red;
  border-bottom: 2px solid $red;
  margin-bottom 25px

h3
  font-weight: 600
  color $headingColor
  font-size 24px
  margin-bottom 20px


/* Nav and logo stuff */
#edu-brand
  color $red
